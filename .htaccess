<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /projets/labo/babydose/

  # Redirection canonique (contexte répertoire) : toute requête arrivant via jeremiecode.fr vers ce dossier est envoyée vers le sous-domaine
  RewriteCond %{HTTP_HOST} ^(www\.)?jeremiecode\.fr$ [NC]
  RewriteRule ^(.*)$ https://babydose.jeremiecode.fr/$1 [R=301,L]

  # Fallback SPA (si jamais la redirection est retirée) :
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^ index.html [L]
</IfModule>

# Compression Gzip
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json
</IfModule>

# Cache des fichiers statiques
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 month"
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType image/gif "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  ExpiresByType application/json "access plus 0 seconds"
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>
